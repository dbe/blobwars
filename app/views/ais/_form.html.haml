= form_for [@ai.player, @ai] do |f|
  -if @ai.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ai.errors.count, "error")} prohibited this ai from being saved:"
      %ul
        - @ai.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :logic
    = f.text_area :logic
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
